/**
 * Computes the sum of three bits.
 */
CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    HalfAdder(a=a, b=b, sum=tempsum, carry=tempcar);
    HalfAdder(a=tempsum, b=c, sum=sum, carry=car2);
    Or(a=tempcar, b=car2, out=carry);
}